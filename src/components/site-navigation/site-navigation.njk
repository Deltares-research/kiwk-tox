<nav class="nav js-nav" role="navigation" tabindex="-1">

  {# Menu Toggle Button #}
  <button
    class="nav__toggle js-nav-toggle"
    aria-expanded="false"
    aria-controls="nav-menu"
  >
    <span class="sr-only">toggle menu</span>
    <span class="menuicon">
      <span class="menuicon__bar"></span>
      <span class="menuicon__bar"></span>
      <span class="menuicon__bar"></span>
      <span class="menuicon__bar"></span>
    </span>
  </button>

  {# Nav Links  #}
  {%- set localeMainMenu = app.mainMenu | getLocaleData -%}
  <ul class="site-navigation__menu" id="nav-menu">
    {% for item in localeMainMenu.items %}
      <li class="site-navigation__item">
        <a href="/{{ locale }}/{{ item.page.slug }}">
          {{ item.name }}
        </a>
      </li>
    {% endfor %}
  </ul>

  {# Language Toggle #}
  <ul>
    {% for siteLocale in meta.locales %}
      {%- set altSlug = languageAlts | inferAltSlug(siteLocale) -%}
      <li class="site-navigation__item">
        {% if siteLocale == locale %}
          {{ siteLocale }}
        {% else %}
          <a href="{{ altSlug }}">
            {{ siteLocale }}
          </a>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
